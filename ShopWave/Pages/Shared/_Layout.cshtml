<div class="hero">
    <header id="masthead" role="banner">
                <div class="container">
                    <div id="top-icons">
                        <button class="top-icon" id="menu-button">
                            <span class="hamburger hamburger--boring">
                                <span class="hamburger-box">
                                    <span class="hamburger-inner"></span>
                                </span>
                            </span>
                            <span class="hamburger-label">Menu</span>
                        </button>
                        <a href="/profile" class="top-icon text-white">
                            @if(User.Identity.IsAuthenticated){
                                string? userId;
                                try
                                {
                                    var user = await userManager.GetUserAsync(User);
                                    userId = user.Id;
                                    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
                                    <script>
                                        function loadAvatar() {
                                            var userId = "@userId";

                                            $.ajax({
                                                url: "/Home/GetAvatar?userId=" + userId,
                                                type: "GET",
                                                dataType: "text",
                                                success: function (avatarBase64) {
                                                    var imgElement = document.getElementById("user-avatar");
                                                    if (avatarBase64) {
                                                        imgElement.src = "data:image/png;base64, " + avatarBase64;
                                                    } else {
                                                        // Используйте изображение по умолчанию
                                                        imgElement.src = "/img/userIcon.png";
                                                    }
                                                },
                                                error: function () {
                                                    // Обработка ошибки
                                                }
                                            });
                                        }

                                        loadAvatar();
                                    </script>
                                    <img class="avatar" id="user-avatar"/>
                                }
                                catch
                                {
                                    <img class="avatar" src="/img/userIcon.png">
                                }
                            }
                            else
                            {
                                <img class="avatar" src="/img/userIcon.png">
                            }


                            <span style="margin-left: 10px;">Account</span>
                        </a>



                    </div>

        <nav id="site-nav" role="navigation">
          <div class="col">
            <h4>Main</h4>
            <ul>
              <li><a href="/">Home</a></li>
              <li><a href="#">Catalog</a></li>
              <li><a href="/products">Products</a></li>
            </ul>            
          </div>
          <div class="col">
