@model Order
@{
    ViewBag.Title = "Confirm order";
}
<style>
    .rating {
        font-size: 24px;
    }

    .rating {
        transition: transform 0.35s ease-in-out;
    }

    .rating:hover
    {
        transform: scale(1.2);
    }
</style>
<div class="container mt-5 text-center">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card" style="border-radius: 10px; background: #ffff; width: auto; padding: 20px">
                <div class="col-md-12">
                    <h2 class="mt-3 mb-1 fw-bold">Confirm order</h2>
                    <p class="small">OrderId: @Model.OrderId</p>
                    <p class="small mb-4">Current status: @Model.Statuses.StatusName</p>
                    <form method="post" asp-action="postreview">
                        <div class="form-group mt-2">
                            <label for="rating">Rate (from 1 to 5 stars):</label>
                            <div class="rating">
                                <span class="star text-secondary" data-rating="1"><i class="fas fa-star"></i></span>
                                <span class="star text-secondary" data-rating="2"><i class="fas fa-star"></i></span>
                                <span class="star text-secondary" data-rating="3"><i class="fas fa-star"></i></span>
                                <span class="star text-secondary" data-rating="4"><i class="fas fa-star"></i></span>
                                <span class="star text-secondary" data-rating="5"><i class="fas fa-star"></i></span>
                                <input type="hidden" name="rating" id="rating" value="0">
                            </div>
                        </div>
                        <div class="form-group mt-3">
                            <label for="review">Review text:</label>
                            <textarea class="form-control" name="reviewtext" rows="4"></textarea>
                        </div>
                        <button type="submit" class="btn btn-success mt-3 mb-4">
                            Submit my review <i class="fas fa-check-circle"></i>
                        </button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('.star').click(function () {
            var rating = $(this).data('rating');
            $('#rating').val(rating);
            $('.star').removeClass('text-warning');
            $(this).prevAll('.star').addClass('text-warning');
            $(this).addClass('text-warning');
        });
    });
</script>
