@using Microsoft.AspNetCore.Identity;
@model IdentityUser
@{
    ViewData["Title"] = "Profile";
}
<div class="container-xl px-4 mt-4">
    <div class="row">
        <div class="col-xl-4">
            <div class="card mb-4 mb-xl-0">
                <div class="card-header">Profile Picture</div>
                <div class="card-body text-center">
                    <!-- Profile picture image-->
                    <img class="img-account-profile rounded-circle mb-2" src="http://bootdey.com/img/Content/avatar/avatar1.png" alt="">
                    <!-- Profile picture help block-->
                    <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
                    <!-- Profile picture upload button-->
                    <button class="btn btn-primary" type="button">Upload new image</button>
                </div>
            </div>
        </div>
        <div class="col-xl-8">
            <!-- Account details card-->
            <div class="card mb-4">
                <div class="card-header">Login Data</div>
                <div class="card-body">
                    <form>
                        <div class="mb-3">
                            <label class="small mb-1 text-secondary" for="inputUsername">Username (how your name will appear to other users on the site)</label>
                            <input class="form-control" id="inputUsername" type="text" placeholder="Enter your username" value="@Model.UserName">
                        </div>
                        <div class="mb-3">
                            <label class="small mb-1 text-secondary" for="inputEmailAddress">Email address</label>
                            <input class="form-control" id="inputEmailAddress" type="email" placeholder="Enter your email address" value="@Model.Email" readonly>
                        </div>
                        <button class="btn btn-primary" type="button">Save changes</button>
                    </form>
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-header">UserData Data</div>
                <div class="card-body">
                    <form>
                        <div class="row gx-3 mb-3">
                            <div class="col-md-6">
                                <label class="small mb-1 text-secondary" for="inputFirstName">First name</label>
                                <input required minlength="2" maxlength="20" class="form-control" id="inputFirstName" type="text" placeholder="Enter your first name" value="Valerie">
                            </div>
                            <div class="col-md-6">
                                <label class="small mb-1 text-secondary" for="inputLastName">Last name</label>
                                <input required minlength="5" maxlength="20" class="form-control" id="inputLastName" type="text" placeholder="Enter your last name" value="Luna">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="small mb-1 text-secondary" for="inputPhone">Phone number witout country code like: 69077251</label>
                            <input required pattern="^\d{8}$" class="form-control" type="text" placeholder="Enter your phone number" value="+37369077251" /> 
                        </div>
                        <div class="mb-3">
                            <label class=" small mb-1 text-secondary" for="inputLocation">Location</label>
                            <input required minlength="3" maxlength="35" class="form-control" type="text" placeholder="Enter your location" value="London"/>
                        </div>
                        <div class="mb-3">
                            <label class=" small mb-1 text-secondary" for="inputAddress">Adress, example: Backer street 22</label>
                            <input required minlength="10" maxlength="40" class="form-control" type="text" placeholder="Enter your location" value="Baker street 42" />
                        </div>
                        <div class="mb-3">
                            <label class=" small mb-1 text-secondary">Postal code, example: MD4022</label>
                            <input required minlength="3" maxlength="10" class="form-control" type="text" placeholder="Enter postal code" value="MD2042" />
                        </div>
                        <button class="btn btn-primary" type="submit">Save changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>