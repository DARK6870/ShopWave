@{
    ViewBag.Title = "Order";
}
@model SellerOrderViewModel
<style>
    .order-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        margin: 10px;
    }

    .order-details {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        grid-gap: 10px;
    }

    .row {
        display: flex;
        margin-bottom: 10px;
    }

    .label {
        flex: 1;
        font-weight: bold;
        margin-right: 10px;
    }

    .value {
        flex: 1;
    }

</style>
<div class="order-card">
    <div class="order-details">
        <div class="row">
            <div class="label">Order ID:</div>
            <div class="value"><a href="/seller/order/@Model.ID" class="fw-bold">@Model.ID</a></div>
        </div>
        <div class="row">
            <div class="label">Product Name:</div>
            <div class="value">@Model.ProductName</div>
        </div>
        <div class="row">
            <div class="label">Variation Name:</div>
            <div class="value">@Model.VariationName</div>
        </div>
        <div class="row">
            <div class="label">Total Price:</div>
            <div class="value">@Model.totalPrice</div>
        </div>
        <div class="row">
            <div class="label">Country:</div>
            <div class="value">@Model.CountryName</div>
        </div>
        <div class="row">
            <div class="label">Address:</div>
            <div class="value">@Model.Address</div>
        </div>
        <div class="row">
            <div class="label">Postal Code:</div>
            <div class="value">@Model.PostalCode</div>
        </div>
        <div class="row">
            <div class="label">Phone:</div>
            <div class="value">@Model.Phone</div>
        </div>
        <div class="row">
            <div class="label">Status:</div>
            <div class="value">@Model.Status</div>
        </div>
    </div>
</div>
