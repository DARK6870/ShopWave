@{
    ViewBag.Title = "Seller panel";
}
<div class="container mt-5">
    <h1 class="text-primary fw-bold text-center mt-2 mb-4">Seller panel</h1>
    <div class="row">
        <div class="row">
            <div class="col-md-4 mb-4">
                <a href="/seller/myproducts">
                    <div class="card shadow" style="border-left: 0.25rem solid #4e73df!important;">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <h5 class="card-title fw-bold" style="color: #4e73df">Manage products</h5>
                            <i class="fas fa-box-open fa-3x" style="color: #4e73df"></i>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-4 mb-4">
                <a href="/seller/manageorders">
                    <div class="card shadow" style="border-left: 0.25rem solid #1cc88a!important;">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <h5 class="card-title fw-bold" style="color: #1cc88a;">Manage orders</h5>
                            <i class="fas fa-shopping-basket fa-3x" style="color: #1cc88a;"></i>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-4 mb-4">
                <a href="/seller/orderhistory">
                    <div class="card shadow" style="border-left: 0.25rem solid #f6c23e!important;">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <h5 class="card-title fw-bold" style="color: #f6c23e;">Order history</h5>
                            <i class="fas fa-history fa-3x" style="color: #f6c23e;"></i>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>

@if (TempData["Message"] != null)
{
    <text>
        <script>
            var message = '@TempData["Message"]';
            Swal.fire({
                icon: '@TempData["Icon"]',
                title: 'Info message',
                text: message,
                showConfirmButton: true
            });
        </script>
    </text>
}
