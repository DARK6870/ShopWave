@{
    ViewBag.Title = "Sellers requests";
    @model List<ShopWave.Entity.SellerData>

}

<div class="container mt-4">
    <h2 class="text-primary text-center fw-bold">Sellers requests</h2>
    <div class="row mt-4">
        <div class="table-responsive">
            <table class="table table-hover table-bordered" style="border-radius: 5px; overflow: hidden;">
                <thead>
                    <tr class="table-dark">
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>IDPN</th>
                        <th>Pass Start Date</th>
                        <th>Pass End Date</th>
                        <th>Date of Birth</th>
                        <th>Pass Number</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.IDPN</td>
                            <td>@item.PassSDate.ToShortDateString()</td>
                            <td>@item.PassEDate.ToShortDateString()</td>
                            <td>@item.DateBrth.ToShortDateString()</td>
                            <td>@item.PassNr</td>
                            <td><a href="/admin/seller/@item.Id" class="btn btn-warning text-white">Details</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>